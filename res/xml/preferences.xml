<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="Currency Exchange Options"
        android:title="Currency" >
        <ListPreference
            android:defaultValue="USD"
            android:entries="@array/defaultCurrenciesNames"
            android:entryValues="@array/defaultCurrenciesValues"
            android:key="default_currency"
            android:summary="What should be your default currency?"
            android:title="Default currency" />
        <ListPreference
            android:defaultValue="604800"
            android:entries="@array/defaultUpdateNames"
            android:entryValues="@array/defaultUpdateValues"
            android:key="default_updatefreq"
            android:summary="How often should the exchange rates be updated?"
            android:title="Update Frequency" />
    </PreferenceCategory>
    <PreferenceCategory
        android:summary="Tip Options"
        android:title="Tip" >
        <ListPreference
            android:defaultValue="15"
            android:entries="@array/defaultTipValues"
            android:entryValues="@array/defaultTipValues"
            android:key="default_tip"
            android:summary="What should be the default tip?"
            android:title="Default tip" />
    </PreferenceCategory>

</PreferenceScreen>